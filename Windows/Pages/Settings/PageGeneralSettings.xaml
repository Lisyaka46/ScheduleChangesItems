<Page x:Class="ScheduleChangesItems.Windows.Frames.Settings.PageGeneralSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScheduleChangesItems.Windows.Frames.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGeneralSettings">

    <Grid>
        <CheckBox x:Name="VisiblyMaxMin" Content="Отображать состояния значений" HorizontalAlignment="Left" Margin="8,9,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="VisiblySizePosition" HorizontalAlignment="Left" Margin="144,54,0,0" VerticalAlignment="Top" Minimum="3" Maximum="19" SmallChange="2" LargeChange="2" Value="9" TickFrequency="2" TickPlacement="Both" Width="120" IsSnapToTickEnabled="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="267,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Value, ElementName=VisiblySizePosition}"/>
        <TextBlock HorizontalAlignment="Left" Margin="13,44,0,0" TextWrapping="Wrap" Text="Кол-во отображаемых позиций графика" VerticalAlignment="Top" Width="129" TextAlignment="Center"/>

    </Grid>
</Page>
